%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% EJERCICIO 5                                 %%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

/EJERCICIO5
{
    aCentimetros

    /xIrlanda 5 def
    /yIrlanda 17 def
    /xSanVicente 5 def
    /ySanVicente 8 def
    /ancho 10 def
    /alto 7 def

    % Bandera de Irlanda

        % Franja Shamrock Green. RGB: (22, 155, 98)
        0 0.6 0.4 setrgbcolor
        xIrlanda yIrlanda moveto
        ancho 3 div 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho 3 div rlineto
        270 rotate
        fill

        % Franja White. RGB: (255, 255, 255)
        1 1 1 setrgbcolor
        xIrlanda ancho 3 div add yIrlanda moveto
        ancho 3 div 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho 3 div rlineto
        270 rotate
        fill

        % Franja Mango Tango. RGB: (255, 136, 62)
        1 0.5 0.2 setrgbcolor
        xIrlanda ancho 3 div 2 mul add yIrlanda moveto
        ancho 3 div 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho 3 div rlineto
        270 rotate
        fill

        % Marco
        0 0 0 setrgbcolor
        xIrlanda yIrlanda moveto
        ancho 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho rlineto
        270 rotate
        closepath
        stroke

    % Bandera de San Vicente y Las Granadinas

        % Franja True Blue. RGB: (0, 114, 198)
        0 0.4 0.7 setrgbcolor
        xSanVicente ySanVicente moveto
        ancho 4 div 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho 4 div rlineto
        270 rotate
        fill


        % Franja Metallic Yellow. RGB: (252, 209, 22)
        1 0.8 0.1 setrgbcolor
        xSanVicente ancho 4 div add ySanVicente moveto
        ancho 2 div 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho 2 div rlineto
        270 rotate
        fill

        % Franja Shamrock Green. RGB: (0, 158, 96)
        0 0.6 0.4 setrgbcolor
        xSanVicente ancho 4 div 3 mul add ySanVicente moveto
        ancho 4 div 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho 4 div rlineto
        270 rotate
        fill

        % Rombos en V Shamrock Green. RGB: (0, 158, 96)
        0 0.6 0.4 setrgbcolor

        /separacion 0.2 def
        /longitud 1.5 def

        xSanVicente ancho 2 div add
        ySanVicente alto 2 div separacion sub add
        moveto

        300 rotate
        longitud 0 rlineto
        300 rotate
        longitud 0 rlineto
        240 rotate
        longitud 0 rlineto
        240 rotate

        xSanVicente ancho 2 div separacion sub add
        ySanVicente alto 2 div add
        moveto

        120 rotate
        longitud 0 rlineto
        120 rotate
        longitud 0 rlineto
        60 rotate
        longitud 0 rlineto
        60 rotate

        xSanVicente ancho 2 div separacion add add
        ySanVicente alto 2 div add
        moveto

        60 rotate
        longitud 0 rlineto
        240 rotate
        longitud 0 rlineto
        300 rotate
        longitud 0 rlineto
        120 rotate
        fill

        % Marco
        0 0 0 setrgbcolor
        xSanVicente ySanVicente moveto
        ancho 0 rlineto
        0 alto rlineto
        90 rotate
        0 ancho rlineto
        270 rotate
        closepath
        stroke

    showpage
} def

